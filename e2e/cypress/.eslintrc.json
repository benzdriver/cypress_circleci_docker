{
    "plugins": [
        "cypress"
    ],
    "env": {
        "es2021": true,
        "node": true,
        "cypress/globals": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "warn",
        "no-empty": "warn",
        "semi": "warn",
        "quotes": ["warn", "single"],
        "cypress/no-assigning-return-values": "warn",
        "cypress/no-force": "warn",
        "cypress/no-async-tests": "warn"
    }
}
